{
    "name": "markhuot/craft-mcp",
    "type": "craft-plugin",
    "require": {
        "php-mcp/server": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "markhuot\\craftmcp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "markhuot",
            "email": "mark@markhuot.com"
        }
    ],
    "extra": {
        "name": "MCP",
        "description": "A MCP server for Craft CMS",
        "handle": "mcp",
        "version": "1.0.0",
        "class": "markhuot\\craftmcp\\Plugin"
    },
    "require-dev": {
        "markhuot/craft-pest-core": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true,
            "pestphp/pest-plugin": true
        }
    }
}
